<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.app.bzpower.dao.LogDao">

	<resultMap type="com.app.bzpower.entity.Log"
		id="logMap">
		<result column="id" property="id" />
		<result column="company" property="company" />
		<result column="userId" property="userId" />
		<result column="mac" property="mac" />
		<result column="did" property="did" />
		<result column="requestTime" property="requestTime" />
		<result column="openTime" property="openTime" />
		<result column="closeTime" property="closeTime" />
		<result column="action" property="action" />
	</resultMap>
	
	<select id="getLog" parameterType="java.lang.String" resultType="com.app.bzpower.entity.Log">
		select * from log where request = #{request}
	</select>

	<insert id="insertUserRequestOpenLock">
		insert into log(userName, did, mac, requestTime, actionD, request)
					values (#{userName}, #{did}, #{mac},#{requestTime}, #{actionD}, #{request})
	</insert>


	<update id="updateOpenLockInfo"
		parameterType="com.app.bzpower.entity.Log">
			update log set openTime= #{openTime}, actionD=#{actionD}, request=#{request} where id=#{id}
	</update>
	
